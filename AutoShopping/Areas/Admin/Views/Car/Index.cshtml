@model IEnumerable<CarViewModel>
@{
    ViewData["Title"] = "افزودن ماشین";
}
    <link href="~/css/Color.css" rel="stylesheet" />
<div class="col-10 text-left">
    <a class="btn btn-outline-info mt-2" style="color: #000 !important;" asp-area="Admin" asp-controller="Car" asp-action="AddCar">افزودن ماشین جدید</a>
</div>
<div class="col-10 bg-white mt-3 shadow">
    <table class="table table-striped table-borderless text-center mt-1">
        <thead>
            <tr>
                <th>کد ماشین</th>
                <th>مدل</th>
                <th>برند</th>
                <th>دسته بندی</th>
                <th>رنگ</th>
                <th>تاریخ تولید</th>
                <th>قیمت</th>
                <th>موجودی</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.ModelName</td>
                    <td>@item.BrandName</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <span class="ColorSpan" style="background-color: @item.ColorCode">
                        </span>
                    </td>
                    <td>@item.CreateDate</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Car" asp-action="EditCar" asp-route-id="@item.ID">ویرایش</a>
                        <span>|</span>
                        <a asp-area="Admin" asp-controller="Car" asp-action="DeleteCar" asp-route-id="@item.ID">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

