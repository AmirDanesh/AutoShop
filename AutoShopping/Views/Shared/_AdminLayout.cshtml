<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - خودرو بانک</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/AdminMasterPage.css" rel="stylesheet" />
    <link href="~/css/Main.css" rel="stylesheet" />
    <link href="~/lib/FileUpload/image-uploader.css" rel="stylesheet" />
    <link href="~/Awesome/fontawesome-pro-5.12.0-web-ulabs/css/all.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid dirRtl">
        <div class="row justify-content-end">
            <div class="col-2 toolsMenu text-center">
                <div class="row">
                    <div class="siteLogo borderButtom">
                        <img src="~/Images/Logo.png" />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="user mt-3 mb-2">
                        <img src="~/Images/userProfile.png" />
                        <h5 class="mt-3">کاربر عزیز خوش آمدید</h5>
                    </div>
                    <ul class="menu dirRtl">
                        <li>
                            <a href="#">اطلاعات پایه</a>
                            <ul>
                                <li>
                                    <a href="/Admin/Brand" id="first">برند</a>
                                </li>
                                <li>
                                    <a href="/Admin/Model">مدل</a>
                                </li>
                                <li>
                                    <a href="/Admin/Color">رنگ</a>
                                </li>
                                <li>
                                    <a href="/Admin/Car">افزودن ماشین</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="/Admin/Brand">مدیریت انبار</a>
                        </li>
                        <li>
                            <a href="/Admin/Brand">مدیریت سفارشات</a>
                        </li>
                        <li>
                            <a href="/Admin/Brand">مدیریت کاربران</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-10">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="row">
                            <div class="header borderButtom">
                                <a class="exitLink f22">خروج</a>
                                <a class="homeLink f22">ورود به صفحه اصلی</a>
                            </div>
                        </div>
                    </div>
                    @RenderBody()
                    @{
                        if (ViewBag.success == true)
                        {
                            <div id="Alert" class="alert alert-success alert-dismissible fade show mt-4 col-3" role="alert" style="position: fixed; bottom: 5px; left: 25px;">
                                <p class="text-center f20">عملیات با موفقیت انجام شد</p>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                        else if (ViewBag.success == false)
                        {
                            <div id="Alert" class="alert alert-danger alert-dismissible fade show mt-4 col-3" role="alert" style="position: fixed; bottom: 5px; left: 25px;">
                                <p class="text-center f20">عملیات با خطا مواجه شد</p>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <script>
        //$("#first").addClass("backgroundSelect");
        //$("a").click(function () {
        //    $(".menu a").removeClass("backgroundSelect");
        //    $(this).addClass("backgroundSelect");
        //});

        var a = setTimeout(function () { $("#Alert").alert('close'); }, 3000);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
